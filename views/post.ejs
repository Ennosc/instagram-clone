<%- include('partials/header') -%>
<div class="container py-4">
  <div class="row g-4">
    <div class="col-12 col-md-6">
      <div class=" bg-light rounded-3 overflow-hidden">
        <img src="<%= post.image %>" class="w-100 h-100 object-fit-cover" alt="<%= post.title %>">
      </div>
    </div>


    <div class="col-12 col-md-6">
      <div class="d-flex justify-content-between align-items-start mb-2">
        <div>
          <h2 class="h4 mb-0"><%= post.title %></h2>
          <small class="text-muted"><%= author.userName %></small>
        </div>

        <% if (post.user == user.id) { %>
          <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger fa fa-trash" type="submit" title="Delete"></button>
          </form>
        <% } %>
      </div>


      <p class="mb-3"><%= post.caption %></p>


      <div class="d-flex align-items-center gap-3 mb-3">
        <form action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
          <button class="btn btn-primary fa fa-heart" type="submit" title="Like"></button>
        </form>
        <h3 class="h5 mb-0">Likes: <%= post.likes %></h3>
      </div>

      <hr class="my-3">


      <div class="comments-box mb-3">
  <ul class="list-unstyled mb-0">
    <% for (let i = 0; i < comments.length; i++) { %>
      <li class="mb-2">
        <div class="d-flex justify-content-between align-items-center">

          <!-- Linke Seite: Kommentar -->
          <span><%= comments[i].comment %></span>

          <!-- Rechte Seite: Username + optional MÃ¼lleimer -->
          <div class="d-flex align-items-center">
            <small class="text-muted me-2"><%= comments[i].author.userName %></small>
            <% if (comments[i].author._id == user.id) { %>
              <form action="/post/deleteComment/<%= comments[i]._id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger fa fa-trash" type="submit" title="Delete"></button>
              </form>
            <% } %>
          </div>

        </div>
      </li>
    <% } %>
  </ul>
</div>


      <form action="/comment/createComment/<%= post._id %>" method="POST" class="mt-2">
        <div class="mb-2">
          <label for="comment" class="form-label"></label>
          <input type="text" class="form-control" id="comment" name="comment" placeholder="Add a comment...">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <div class="d-flex gap-2 mt-4">
        <a class="btn btn-outline-secondary" href="/profile">Return to Profile</a>
        <a class="btn btn-outline-secondary" href="/feed">Return to Feed</a>
      </div>
    </div>
  </div>
</div>


<%- include('partials/footer') -%>
